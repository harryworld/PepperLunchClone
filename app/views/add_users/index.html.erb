<h1>Listing add_users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @add_users.each do |add_user| %>
      <tr>
        <td><%= add_user.first_name %></td>
        <td><%= add_user.last_name %></td>
        <td><%= link_to 'Show', add_user %></td>
        <td><%= link_to 'Edit', edit_add_user_path(add_user) %></td>
        <td><%= link_to 'Destroy', add_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


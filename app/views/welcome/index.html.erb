<h1>Welcome to PepperLunch Tracker</h1>

<div class="timetable" ng-controller="TimetableCtrl">
  <h2 class="text-center">You have taken {{ lunchCount }} times of PepperLunch</h2>

  <div class="row week" ng-repeat="week in weeks">
    <div class="col-md-1 number">Week {{ $index + 1 }}</div>
    <div class="col-md-2 day" ng-repeat="day in week">
      <div class="btn btn-success" ng-class="getClass(day)" ng-click="increment($parent.$index, $index)"></div>
    </div>
  </div>
</div>